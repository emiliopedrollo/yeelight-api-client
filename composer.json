{
    "name": "emiliopedrollo/yeelight-api-client",
    "description": "Client library for Yeelight API",
    "homepage": "https://www.yeelight.com/en_US/developer",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Arkadiusz Gac",
            "email": "arkadiusz.gac@gmail.com"
        },
        {
            "name": "Emilio B. Pedrollo",
            "email": "emiliopedrollo@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "ext-json": "*",
        "clue/socket-raw": "^1.6",
        "react/promise": "^2.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpspec/prophecy": "^1.17"
    },
    "autoload": {
        "psr-4": { "Yeelight\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-code": "php-cs-fixer fix --verbose --diff --dry-run",
        "fix-code": "php-cs-fixer fix ."
    }
}
